<script src="~/Scripts/Custom/cardCarousel.js"></script>
<link rel="stylesheet" href="~/Content/cardCarousel.css">

<script type="text/javascript">

    //VARS
    var pageone = $("#pageone");
    var pagetwo = $("#pagetwo");
    var carouselCards = $(".carouselCard");
    var autocompleteList = [];

    $(document).ready(function () {
        getRandomForCarousel();
    });


    //ONCLICK PAGINATION

        $(".recordpaginationsearch").click(function (e) {
            e.preventDefault();
            if ($("#cardInput").val() != "") {
                var frompage = $(".active-pagination"),
                    topage = $(".inactive-pagination");
                showPage(topage, frompage);
            }
            else {
                $("#cardInput").focus();
            }
        });

    //ONCLICK PAGINATION RANDOM
        $(".recordpagination").click(function (e) {
            e.preventDefault();
                var frompage = $(".active-pagination"),
                    topage = $(".inactive-pagination");
                showPage(topage, frompage);
        });
    
    //SHOW NEW PAGE
    function showPage(topage, frompage) {
        if (topage[0].id == "pagetwo") {
            $("#fadeList").fadeIn(function () {
                var pageWidth = frompage.width();
                topage.css("left", pageWidth);
                topage.addClass("active-pagination");
                topage.removeClass("inactive-pagination");
                $("html, body").animate({ scrollTop: 0 }, "slow");
                topage.add(frompage).animate({
                    "left": "-=" + pageWidth + "px"
                }, 500).promise().done(function () {
                    frompage.removeClass('active-pagination');
                    frompage.addClass('inactive-pagination');
                    $("#fadeCover").fadeOut();
                });
            });
        }
        else {
            $("#fadeCover").fadeIn(function () {
                var pageWidth = frompage.width();
                topage.css("left", -pageWidth);
                topage.addClass("active-pagination");
                topage.removeClass("inactive-pagination");
                $("html, body").animate({ scrollTop: 0 }, "slow");
                topage.add(frompage).animate({
                    "left": "+=" + pageWidth + "px"
                }, 500).promise().done(function () {
                    frompage.removeClass('active-pagination');
                    frompage.addClass('inactive-pagination');
                    $("#fadeList").fadeOut();
                });
            });
        }
    }

    //ONKEYUP FUNCTION FOR AUTOCOMPLETE INPUT
    $("#cardInput").keyup(function () {
        if ($("#cardInput").val().length > 2) {
            autocompleteReturn($("#cardInput").val())
        }
        else {
            autocompleteList = [];
        }
    });

    //AJAX CALL FOR AUTOCOMPLETE
    function autocompleteReturn(search) {
        $.ajax({
            type: "GET",
            url: "https://api.scryfall.com/cards/autocomplete?q=" + search,
            success: function (data) {
                autocompleteList = data.data;
                $("#cardInput").autocomplete({
                    source: autocompleteList
                });
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log(errorThrown)
            }
        });
    }

    //AJAX CALL FOR CARD RETURN
    function getCardInfo(card) {
        $.ajax({
            type: "GET",
            url: "https://api.scryfall.com/cards/named/?exact=" + card,
            success: function (data) {
                if (data.reprint == true) {
                    getPaper(data);
                }
                else {
                    fillPage(data)
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log(errorThrown)
            }
        });
    }


    //AJAX CALL FOR GETTING PAPER CARD OBJECT
    function getPaper(card) {
        if (card.name != "Swamp" &&
            card.name != "Plains" &&
            card.name != "Island" &&
            card.name != "Forest" &&
            card.name != "Mountain") {
            $.ajax({
                type: "GET",
                url: card.prints_search_uri,
                success: function (data) {
                    var i = data.total_cards - 1;
                   
                    var foundCardData = data.data[i];
                    fillPage(foundCardData);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(errorThrown)
                }
            });
        }
        else {
            fillPage(card);
        }
    }

    //CALLS FOR RANDOM CARDS FOR CAROUSEL
    function getRandom(i) {
        $.ajax({
            type: "GET",
            url: "https://api.scryfall.com/cards/random",
            success: function (data) {
                if (data.rarity == "common"
                    && data.legalities.pauper != "not_legal"
                    && data.legalities.pauper != "banned"
                    && data.type_line.indexOf("Basic Land") == -1) {
                    $(carouselCards[i]).attr("alt", data.uri);
                    if (data.card_faces != null) {
                        $(carouselCards[i]).attr("src", data.card_faces[0].image_uris.normal);
                    }
                    else {
                        $(carouselCards[i]).attr("src", data.image_uris.normal);
                    }
                }
                else {
                    getRandom(i);
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log(errorThrown);
            }
        });
    }

    //FILL RANDOM CARDS FOR CAROUSEL
    function getRandomForCarousel() {
        for (i = 0; i < carouselCards.length; i++) {
            getRandom(i);
        }
    }

    //AJAX FOR GETTING CARD DETAIL OF RANDOM CARD SELECTED
    function getRandomInfo(uri) {
        $.ajax({
            type: "GET",
            url: uri,
            success: function (data) {
                getPaper(data);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.log(errorThrown);
            }
        });
    }


    //FUNCTION FOR FILLING SELECTED CARD WITH DATA IN CARD FOCUS PANEL
    function fillPage(data) {
        console.log("!!!!!!!!!!!");
        console.log(data);
        console.log("!!!!!!!!!!!");
        if (data.card_faces != null) {
            $("#flipButton").css("display", "inline");
            $("#cardFront").attr("src", data.card_faces[0].image_uris.normal);
            $("#cardBack").attr("src", data.card_faces[1].image_uris.normal);
            if (data.card_faces[0].oracle_text != null) {
                $("#oracleContainer").css("display", "inline");
                $("#oracleText").text(data.card_faces[0].oracle_text);
            }
            else {
                $("#oracleContainer").css("display", "none");
            }
            if (data.card_faces[0].flavor_text != null) {
                $("#flavorContainer").css("display", "inline");
                $("#flavorText").text(data.card_faces[0].flavor_text);
            }
            else {
                $("#flavorContainer").css("display", "none");
            }
        }
        else {
            $("#cardFront").attr("src", data.image_uris.normal);
            $("#cardBack").attr("src", "../Content/Images/cardBack.jpg");
            if (data.oracle_text != null) {
                $("#oracleContainer").css("display", "inline");
                $("#oracleText").text(data.oracle_text);
            }
            else {
                $("#oracleContainer").css("display", "none");
            }
            if (data.flavor_text != null) {
                $("#flavorContainer").css("display", "inline");
                $("#flavorText").text(data.flavor_text);
            }
            else {
                $("#flavorContainer").css("display", "none");
            }
        }
        if (data.legalities.pauper == "legal") {
            $("#isItLegal").text("Yeah");
        }
        else if (data.rarity == "common") {
            $("#isItLegal").text("Yes Sir!");
        }
        else {
            $("#isItLegal").text("Nah Man");
        }
        $("#cardTitle").text(data.name);
        $("#cardSet").text(data.set_name);
        $("#cardRarity").text(data.rarity);
        $("#cardPrice").text("$" + data.usd);
        $("#cardCMC").text(data.cmc);
        if (data.reserved == true) {
            $("#cardReserved").text("Yes");
        }
        else {
            $("#cardReserved").text("No");
        }
        if (data.reprint == true) {
            $("#cardReprint").text("Yes");
        }
        else {
            $("#cardReprint").text("No");
        }
        if (data.tix == null) {
            $("#cardTix").text("Not Online");
        }
        else {
            $("#cardTix").text(data.tix);
        }

    }
</script>